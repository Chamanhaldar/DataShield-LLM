{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2023", "DOM"],
  "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node", "react", "react-dom"],
    "paths": {
      "@chakra-ui/react": ["./node_modules/@chakra-ui/react/dist/types/index.d.ts"],
      "@chakra-ui/icons": ["./node_modules/@chakra-ui/icons/dist/types/index.d.ts"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "tsconfig.node.json" }]
}
